<div class="container">
    <div class="row">
        <div class="col">
            <div class="card mb-3">
                <div class="card-body">
                    <h3 class="card-title">{{{guide.0.title}}}</h3>
                    <p class="card-text"><small class="text-muted">By {{guide.0.author}}, 3 mins ago</small></p>

                    <div id="guide-content">
                        {{#markdown}}
{{{guide.0.content}}}
                        {{/markdown}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="d-flex w-100">
        <a class="btn btn-dark btn-sm ml-auto" id="return-to-top" style="color: #fff; position: fixed; right: 10%; bottom: 10%; display: none;"><span
                class="mdi mdi-arrow-up"></span></a>
    </div>
</div>
<script>
    var h = Math.max(document.documentElement.clientHeight, window.innerHeight || 0);
    $(window).scroll(function () {
        if ($(this).scrollTop() >= (100)) {
            $('#return-to-top').fadeIn(200);
        } else {
            $('#return-to-top').fadeOut(200);
        }
    });
    $('#return-to-top').click(function () {
        $('body,html').animate({
            scrollTop: 0
        }, 500);
    });
</script>