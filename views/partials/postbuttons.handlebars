<div class="my-3 d-flex justify-content-end">
        {{#if (compare user.steamid "==" post.sid )}}
        <div class="btn-group mr-1" role="group">
                <button class="btn btn-success btn-sm"><span class="mdi mdi-pencil"></span></button>
                <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deletePostModal"><span class="mdi mdi-delete"></span></button>
        </div>
        {{/if}}
        <div class="btn-group" role="group">
                {{#if user}}
                {{#if vote}}
                <button class="btnvote btn btn-danger btn-sm" data-type="down" data-post="{{post.postType}}"
                        data-postid="{{post._id}}"><span class="mdi mdi-thumb-down"></span></button>
                {{else}}
                <button class="btnvote btn btn-success btn-sm" data-type="up" data-post="{{post.postType}}" data-postid="{{post._id}}"><span
                                class="mdi mdi-thumb-up"></span></button>
                {{/if}}
                <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#reportModal"><span class="mdi mdi-alert-circle"></span></button>
                {{else}}
                <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#loginModal"><span class="mdi mdi-thumb-up"></span></button>
                <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#loginModal"><span class="mdi mdi-alert-circle"></span></button>
                {{/if}}
        </div>
</div>