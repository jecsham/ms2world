<div class="my-3 d-flex justify-content-end">
    <div class="btn-group mr-1" role="group">
        <button class="btn btn-success btn-sm"><span class="mdi mdi-pencil"></span></button>
        <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#deletePostModal"><span class="mdi mdi-delete"></span></button>
    </div>
    <div class="btn-group" role="group">
        {{#if user}}
        {{#if vote}}
        {{#if build}}
        <button class="btnvote btn btn-danger btn-sm" data-type="down" data-post="build" data-postid="{{build._id}}"><span
                class="mdi mdi-thumb-down"></span></button>
        {{else}}
        <button class="btnvote btn btn-danger btn-sm" data-type="down" data-post="guide" data-postid="{{guide._id}}"><span
                class="mdi mdi-thumb-down"></span></button>
        {{/if}}
        {{else}}
        {{#if build}}
        <button class="btnvote btn btn-success btn-sm" data-type="up" data-post="build" data-postid="{{build._id}}"><span
                class="mdi mdi-thumb-up"></span></button>
        {{else}}
        <button class="btnvote btn btn-success btn-sm" data-type="up" data-post="guide" data-postid="{{guide._id}}"><span
                class="mdi mdi-thumb-up"></span></button>
        {{/if}}
        {{/if}}
        {{else}}
        <button class="btn btn-success btn-sm" data-toggle="modal" data-target="#loginModal"><span class="mdi mdi-thumb-up"></span></button>
        {{/if}}
        <button class="btn btn-danger btn-sm"><span class="mdi mdi-alert-circle"></span></button>
    </div>
</div>