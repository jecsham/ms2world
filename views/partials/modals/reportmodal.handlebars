<!-- Report Modal-->
{{#if user}}
<div class="modal fade" id="reportModal" tabindex="-1" role="dialog" aria-labelledby="reportModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reportModalLabel">Report {{post.title}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Why do you want to report this post?
                <select class="form-control form-control-sm">
                    <option>Select a option</option>
                    <option>Content not available (images or links broken)</option>
                    <option>Duplicate post</option>
                    <option>Unsuitable content (violence, pornography, etc)</option>
                    <option>Off-topic (it's not related to MapleStory2)</option>
                    <option>Other</option>
                </select>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Cancel</button>
                <button type="button" class="reportbtn btn btn-danger btn-sm">Send report</button>
            </div>
        </div>
    </div>
</div>
{{/if}}