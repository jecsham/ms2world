<div class="container">
    <div class="row">
        <div class="col-12">
            <p>
                <a href="/builds/popular" class="text-dark">Builds</a>
            </p>
        </div>
        <div class="col-md-2 mb-1">
            <select id="selectFilter" class="form-control form-control-sm">
                <option value="popular" selected>Popular</option>
                <option value="recent">Recent</option>
            </select>
        </div>
        <div class="col-md-2 mb-1">
            <select class="form-control form-control-sm">
                <option>All classes</option>
                {{#each classes}}
                <option>{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-md-2 mb-1">
            <select class="form-control form-control-sm">
                <option>All types</option>
                {{#each classTypes}}
                <option>{{name}}</option>
                {{/each}}
            </select>
        </div>
        <div class="col-md-4">
            <div class="input-group mb-1">
                <input type="text" class="form-control form-control-sm align-bottom" id="searchInput" aria-describedby="searchInput"
                    placeholder="Search...">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary btn-sm" type="button"><span class="mdi mdi-magnify"></span></button>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <a href="/create-build" class="btn btn-success btn-sm btn-block mb-3 float-right"><span class="mdi mdi-plus"></span>
                Create</a>
        </div>
        <div class="col">
            {{#unless builds}}
            <p class="text-center">No results found ðŸ˜”</p>
            {{else}}
            <div class="table-responsive">
                <table class="table table-hover">
                    <tbody>
                        {{#each builds}}
                        <tr>
                            <th class="font-weight-normal align-middle"><a href="/build/{{_id}}">{{title}}</a></th>
                            <th class="text-muted small text-left align-middle" style="min-width: 80px"><span class="mdi mdi-eye"></span> {{viewCount}} </th>
                            <th class="text-muted small text-left align-middle" style="min-width: 80px"><span class="mdi mdi-thumb-up"></span> {{voteCount}} </th>
                            <th class="text-muted small text-right align-middle text-truncate" style="max-width: 100px"><a class="text-muted" href="/profile/{{sid}}">{{author}}</a><br>
                                <time class="time" title="{{{date_create}}}"></time>
                            </th>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
                <nav aria-label="Page navigation">
                    <ul class="pagination pagination-sm justify-content-center" id="page_nav">
                    </ul>
                </nav>
            </div>
            {{/unless}}
        </div>
    </div>
</div>
<script>
    'use strict'
    var page = {{{ page }}}
    var totalPages = {{{ totalPages }}}
    var filter = '{{{reqFilter}}}'
    var pagename = 'builds'
</script>
<script src="/js/ms2w_posts.js"></script>