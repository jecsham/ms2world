<div class="container">
    <div class="row">
        <div class="col">
            <div id="main">
                <div>
                    <img src="{{account.img}}" width="75" class="rounded-circle mr-2" alt="{{account.name}}'s profile">
                    <a href="https://steamcommunity.com/profiles/{{account.sid}}" class="text-dark" target="blanc" title="Steam profile">{{account.name}} <span class="mdi mdi-open-in-new"></span></a>
                    <small class="text-muted">Last login: <time class="time" title="{{account.date_last_login}}"></time></small>
                </div>
                <ul class="nav nav-tabs mt-3" id="tab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="guides-tab" data-toggle="tab" href="#guides" role="tab"
                            aria-controls="guides" aria-selected="true">Guides <span class="badge badge-secondary">{{guidesTotal}}</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="builds-tab" data-toggle="tab" href="#builds" role="tab" aria-controls="builds"
                            aria-selected="false">Builds <span class="badge badge-secondary">{{buildsTotal}}</span></a>
                    </li>
                </ul>
                <div class="tab-content" id="tabContent">
                    <div class="tab-pane fade show active" id="guides" role="tabpanel" aria-labelledby="guides-tab">
                        {{#unless guidesTotal}}
                        <p class="text-center mt-3">
                            There is nothing to show here ðŸ˜”</p>
                        {{else}}
                        <div class="table-responsive mt-3">
                            <table class="table table-hover">
                                <tbody>
                                    {{#each guides}}
                                    <tr>
                                        <th class="font-weight-normal align-middle"><a href="/guide/{{_id}}">{{title}}</a></th>
                                        <th class="text-muted small text-left align-middle" style="min-width: 80px"><span class="mdi mdi-eye"></span>
                                            {{viewCount}}</th>
                                        <th class="text-muted small text-left align-middle" style="min-width: 80px"><span class="mdi mdi-thumb-up">
                                                {{voteCount}}</span></th>
                                        <th class="text-muted small text-right align-middle text-truncate" style="max-width: 100px">
                                            <time class="time" title="{{{date_create}}}"></time>
                                        </th>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <div class="text-right pb-1 small">
                                <a href="/guides/?search={{account.sid}}">Show all...</a>
                            </div>
                        </div>
                        {{/unless}}
                    </div>
                    <div class="tab-pane fade" id="builds" role="tabpanel" aria-labelledby="builds-tab">
                        {{#unless buildsTotal}}
                        <p class="text-center mt-3">
                            There is nothing to show here ðŸ˜”</p>
                        {{else}}
                        <div class="table-responsive mt-3">
                            <table class="table table-hover">
                                <tbody>
                                    {{#each builds}}
                                    <tr>
                                        <th class="font-weight-normal align-middle"><a href="/build/{{_id}}">{{title}}</a></th>
                                        <th class="text-muted small text-left align-middle" style="min-width: 80px"><span class="mdi mdi-eye"></span>
                                            {{viewCount}}</th>
                                        <th class="text-muted small text-left align-middle" style="min-width: 80px"><span class="mdi mdi-thumb-up">
                                                {{voteCount}}</span></th>
                                        <th class="text-muted small text-right align-middle text-truncate" style="max-width: 100px">
                                            <time class="time" title="{{{date_create}}}"></time>
                                        </th>
                                    </tr>
                                    {{/each}}
                                </tbody>
                            </table>
                            <div class="text-right pb-1 small">
                                <a href="/builds/?search={{account.sid}}">Show all...</a>
                            </div>
                        </div>
                        {{/unless}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>