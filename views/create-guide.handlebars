<div class="container">
    <div class="row">
        <div class="col">
            <div id="main">
                <div>
                    <p>New Guide</p>
                </div>
                <form id="create-guide">
                    <div class="form-group">
                        <input type="text" class="form-control" id="title" name="title" aria-describedby="titleHelp"
                            placeholder="Enter a title" maxlength="150" required>
                        <small id="titleHelp" class="form-text text-muted">Min 5 - Max 150 characters</small>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="description" name="description" aria-describedby="titleHelp"
                            placeholder="Enter a short description" maxlength="150" required>
                        <small id="titleHelp" class="form-text text-muted">Min 5 - Max 300 characters</small>
                    </div>
                    <textarea name="editor_content" id="content" cols="30" rows="10"></textarea>
                    <div class="form-group">
                        <input name="tags" id="tags" placeholder='Write some tags, separe by commas' required>
                        <small id="titleHelp" class="form-text text-muted">Min 1 - Max 20 tags</small>
                    </div>
                    <div class="g-recaptcha" data-sitekey="6LcSWXkUAAAAAJDHLKqCeKkzD14qz9eXuhmkmOpB"></div>
                    <button id="submitbtn" type="submit" class="btn btn-success btn-sm mt-3">Publicate</button>
                    <div id="status" class="mt-3"></div>
                </form>
                <script src="/js/formvalidation.js"></script>
                <script>
                    'use strict'

                    var simplemde = new SimpleMDE({
                        element: $("#content")[0],
                        autosave: {
                            enabled: true,
                            uniqueId: "521048",
                            delay: 1000,
                        },
                        spellChecker: false
                    });
                    $(document).ready(function () {
                        $('#create-guide').submit(function (event) {
                            if(!checkForm()){
                                event.preventDefault();
                                return $('#status').html('<div class="alert alert-danger" role="alert"><strong>Error!</strong> Some inputs are empty</div>');
                            }
                            $('#submitbtn').attr('disabled', 'disabled');
                            $('#status').html('<p class="text-success">Please wait...<p>');
                                var tagsString = ' ';
                                $.each(JSON.parse($('#tags').val()), function (i, element){
                                    tagsString += element.value+", "
                                    
                                })
                            var formData = {
                                'title': $('input[name=title]').val(),
                                'description': $('input[name=description]').val(),
                                'content': simplemde.value(),
                                'tags': tagsString,
                                'recaptcha': $("#g-recaptcha-response").val()
                            };
                            $.ajax({
                                type: 'POST',
                                url: '/create-guide/submit',
                                data: formData,
                                dataType: 'json',
                                encode: true,
                                success: (resdata) => {
                                    console.log(resdata)
                                    $('#status').html('<div class="alert alert-success" role="alert"><strong>Submited!</strong> Redirecting to your <a href="/guide/' + resdata.id + '">post</a>... ðŸ˜€</div>');
                                    var timer = setTimeout(() => {
                                        window.location = '/guide/'+resdata.id;
                                    }, 3000);
                                },
                                error: (resdata) => {
                                    $('#status').html('<div class="alert alert-danger" role="alert"><strong>Error:</strong> ' + resdata.responseJSON.error + '</div>');
                                    $('#submitbtn').removeAttr('disabled');
                                },
                            });
                            event.preventDefault();
                        });

                        $('#tags')
                            .tagify({
                                maxTags: 20
                            });
                    });
                </script>
            </div>
        </div>
    </div>
</div>